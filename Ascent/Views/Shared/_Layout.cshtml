<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ascent - @ViewData["Title"]</title>
    <link id="themeCSS" rel="stylesheet" href="~/css/cerulean/bootstrap.min.css">
    @RenderSection("StyleSheets", required: false)
</head>
<body class="container">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Context.Request.PathBase/">Ascent</a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home">Home</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Theme
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="javascript:setLightTheme()">Light</a></li>
                                <li><a class="dropdown-item" href="javascript:setDarkTheme()">Dark</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="my-3">
        @RenderBody()
    </main>
    <footer class="footer text-center text-muted mb-3">
        <div>
            Copyright &copy; Chengyu Sun 2021.<br />
            Styled with <a href="https://getbootstrap.com/">Bootstrap</a> and
            <a href="https://bootswatch.com//">Bootswatch</a>.<br />
            Favicon made by <a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a>
            from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>
    <script>
        function setDarkTheme() {
            Cookies.set("theme", "dark", { expires: 21 });
            $("#themeCSS").attr("href", "@Context.Request.PathBase/css/darkly/bootstrap.min.css");
            $("nav.navbar").removeClass("bg-primary").addClass("bg-dark");
        }
        function setLightTheme() {
            Cookies.set("theme", "light", { expires: 21 });
            $("#themeCSS").attr("href", "@Context.Request.PathBase/css/cerulean/bootstrap.min.css");
            $("nav.navbar").removeClass("bg-dark").addClass("bg-primary");
        }
        $(function () {
            var theme = Cookies.get("theme");
            if (theme == "dark")
                setDarkTheme();
            else if (theme == "light")
                setLightTheme();
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
